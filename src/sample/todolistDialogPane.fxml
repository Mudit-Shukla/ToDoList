
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<DialogPane  fx:controller="sample.ToDoListController"
            xmlns:fx="http://javafx.com/fxml" >
    <headerText>
        We could add some instructions here
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Short Description" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Details" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Deadline" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadline" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>